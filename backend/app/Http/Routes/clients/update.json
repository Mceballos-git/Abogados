{
  "identifier": "update",
  "requestType": "PUT",
  "endpoint": "/{id}",
  "controller": "App\\Http\\Controllers\\ClientController",
  "action": "update",
  "authorizationMiddleware": "false",
  "authenticationMiddleware": "true",
  "validationMiddleware": "true",
  "validationRules": {
    "active" : "bool|required",
    "first_name": "required|string",
    "last_name": "required|string",
    "nationality": "sometimes|string|nullable",
    "identification_type": "string|nullable",
    "identification_number": "sometimes",
    "date_of_birth": "nullable",
    "phone_number": "string|nullable",
    "email": "sometimes|string|nullable",
    "street_address": "string|nullable",
    "number_address": "integer|nullable",
    "floor_address": "string|nullable",
    "department_address": "string|nullable",
    "country": "string|nullable",
    "state": "string|nullable",
    "city": "sometimes|string|nullable",
    "observations": "sometimes|string|nullable"
  }
}
