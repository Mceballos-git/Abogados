{
  "identifier": "update",
  "requestType": "PUT",
  "endpoint": "/{id}",
  "controller": "App\\Http\\Controllers\\UserController",
  "action": "update",
  "purifyValues" : 1,
  "authenticationMiddleware": "true",
  "authorizationMiddleware" : "true",
  "roles" : ["admin"],
  "validationMiddleware": "true",
  "validationRules": {
    "email" : "email|required|unique:users,email,{id}",
    "role_list": "array|required",
    "active" : "int|required",
    "first_name" : "string|required",
    "last_name" : "string|required",
    "degree" : "string|sometimes",
    "position": "string|sometimes",
    "shift_start": "string|sometimes",
    "shift_ends": "string|sometimes"
  },
  "requestExample" : {
    "email": "ezequiel.carrizo.ac@gmail.com",
    "role_list": ["admin"],
    "active": 1,
    "first_name": "Ezequiel",
    "last_name": "Carrizo",
    "degree": "Software Developer",
    "position": "Developer",
    "shift_start": "00:00:00.000",
    "shift_end": "23:59:59.999"
  }
}